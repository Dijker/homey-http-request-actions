{
   "id":"com.internet",
   "version":"0.3.0",
   "compatibility":"*",
   "name":{
      "en":"HTTP request flow cards"
   },
   "description":{
      "en":"HTTP request conditions and actions for flows"
   },
   "author":{
      "name":"Erik van Dongen",
      "website":"http://github.com/irritanterik/"
   },
   "contributors":{
     "developers":[
       {
         "name":"El Genio",
         "website":"https://github.com/elgenioNL"
       }
     ]
   },
   "images":{
      "large":"./assets/images/large.jpg",
      "small":"./assets/images/small.jpg"
   },
   "category":"internet",
   "dependencies":{
      "request":"*",
      "express":"^4.13.3"
   },
   "flow":{
      "triggers":[
         {
            "id":"http_get",
            "title":{
               "en":"Incoming GET request",
               "nl":"Ontvangen GET request"
            },
            "tokens":[
               {
                  "name":"value",
                  "title":{
                     "en":"value"
                  },
                  "example":{
                     "en":"5"
                  }
               }
            ],
            "args":[
               {
                  "name":"event",
                  "type":"text",
                  "placeholder":{
                     "en":"Name of the event",
                     "nl":"Naam van de event"
                  }
               }
            ]
         }
      ],
      "conditions":[
         {
            "id":"http_get",
            "title":{
               "en":"HTTP Get Response"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"status_code",
                  "type":"number",
                  "min":100,
                  "max":505,
                  "placeholder":{
                     "en":"200"
                  }
               }
            ]
         },
         {
            "id":"http_get_json",
            "title":{
               "en":"HTTP Get Response (JSON)"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               },
               {
                  "name":"status_code",
                  "type":"number",
                  "min":100,
                  "max":505,
                  "placeholder":{
                     "en":"200"
                  }
               }
            ]
         }
      ],
      "actions":[
         {
            "id":"http_delete",
            "title":{
               "en":"HTTP Delete"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               }
            ]
         },
         {
            "id":"http_get",
            "title":{
               "en":"HTTP Get"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               }
            ]
         },
         {
            "id":"http_get_json",
            "title":{
               "en":"HTTP Get JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_post_json",
            "title":{
               "en":"HTTP Post JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_put_json",
            "title":{
               "en":"HTTP Put JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         }
      ]
   }
}

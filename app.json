{
    "id": "com.internet",
    "version": "0.1.0",
    "compatibility": "*",
    "name": {
        "en": "HTTP request actions"
    },
    "description": {
      "en": "HTTP request actions for flows"
    },
    "author": {
        "name": "Erik van Dongen",
        "email": "gdvandongen@gmail.com"
    },
    "category": "Internet",
    "dependencies": {
      "request": "*"
    },
    "flow": {
      "actions": [
        {
          "id": "http_get",
          "title": {
            "en": "HTTP Get"
          },
          "args": [
            {
              "name": "url",
              "type": "text",
              "placeholder": {
                "en": "http://url/"
              }
            }
          ]
        },{
          "id": "http_post_json",
          "title": {
            "en": "HTTP Post JSON"
          },
          "args": [
            {
               "name": "url",
               "type": "text",
               "placeholder": {
                 "en": "http://url/"
               }
            },{
              "name": "data",
              "type": "text",
              "placeholder": {
                "en": "{\"JSON\": \"formatted data\"}"
              }
            }
          ]
        },{
          "id": "http_put_json",
          "title": {
            "en": "HTTP Put Json"
          },
          "args": [
            {
               "name": "url",
               "type": "text",
               "placeholder": {
                 "en": "http://url/"
               }
            },{
              "name": "data",
              "type": "text",
              "placeholder": {
                "en": "{\"JSON\": \"formatted data\"}"
              }
            }
          ]
        }
      ]
    }
}

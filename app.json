{
    "id": "com.internet",
    "version": "0.2.0",
    "compatibility": "*",
    "name": {
        "en": "HTTP request actions"
    },
    "description": {
      "en": "HTTP request conditions and actions for flows"
    },
    "author": {
        "name": "Erik van Dongen",
        "email": "gdvandongen@gmail.com"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "internet",
    "dependencies": {
      "request": "*"
    },
    "flow": {
      "conditions": [
        {
          "id": "http_get",
          "title": {
            "en": "HTTP Get Response Code"
          },
          "args": [
            {
              "name": "url",
              "type": "text",
              "placeholder": {
                "en": "http://url/"
              }
            },
            {
              "name": "status_code",
              "type": "number",
              "min": 100,
              "max": 505,
              "placeholder": {
                "en": "200"
              }
            }
          ]
        }
      ],
      "actions": [
        {
          "id": "http_delete",
          "title": {
            "en": "HTTP Delete"
          },
          "args": [
            {
              "name": "url",
              "type": "text",
              "placeholder": {
                "en": "http://url/"
              }
            }
          ]
        },{
          "id": "http_get",
          "title": {
            "en": "HTTP Get"
          },
          "args": [
            {
              "name": "url",
              "type": "text",
              "placeholder": {
                "en": "http://url/"
              }
            }
          ]
        },{
          "id": "http_post_json",
          "title": {
            "en": "HTTP Post JSON"
          },
          "args": [
            {
               "name": "url",
               "type": "text",
               "placeholder": {
                 "en": "http://url/"
               }
            },{
              "name": "data",
              "type": "text",
              "placeholder": {
                "en": "{\"JSON\": \"formatted data\"}"
              }
            }
          ]
        },{
          "id": "http_put_json",
          "title": {
            "en": "HTTP Put JSON"
          },
          "args": [
            {
               "name": "url",
               "type": "text",
               "placeholder": {
                 "en": "http://url/"
               }
            },{
              "name": "data",
              "type": "text",
              "placeholder": {
                "en": "{\"JSON\": \"formatted data\"}"
              }
            }
          ]
        }
      ]
    }
}
